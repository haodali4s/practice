Index++;\r\n      if (this.currentIndex >= this.skuInfo.skuImageList.length - 1) {\r\n        this.currentIndex = this.skuInfo.skuImageList.length - 1;\r\n      }\r\n      this.$bus.$emit(\"sendIndex\", this.currentIndex);\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style lang=\"less\" scoped>\r\n.swiper {\r\n  height: 56px;\r\n  width: 412px;\r\n  box-sizing: border-box;\r\n  padding: 0 12px;\r\n\r\n  .swiper-slide {\r\n    width: 56px;\r\n    height: 56px;\r\n\r\n    img {\r\n      width: 100%;\r\n      height: 100%;\r\n      border: 1px solid #ccc;\r\n      padding: 2px;\r\n      width: 50px;\r\n      height: 50px;\r\n      display: block;\r\n\r\n      &.active {\r\n        border: 2px solid #f60;\r\n        padding: 1px;\r\n      }\r\n    }\r\n  }\r\n\r\n  .swiper-button-next {\r\n    left: auto;\r\n    right: 0;\r\n  }\r\n\r\n  .swiper-button-prev {\r\n    left: 0;\r\n    right: auto;\r\n  }\r\n\r\n  .swiper-button-next,\r\n  .swiper-button-prev {\r\n    box-sizing: border-box;\r\n    width: 12px;\r\n    height: 56px;\r\n    background: rgb(235, 235, 235);\r\n    border: 1px solid rgb(204, 204, 204);\r\n    top: 0;\r\n    margin-top: 0;\r\n    &::after {\r\n      font-size: 12px;\r\n    }\r\n  }\r\n}\r\n</style>"],"mappings":"AAaA,SAAAA,MAAA,EAAAC,UAAA,EAAAC,UAAA,EAAAC,QAAA;AAEA,SAAAC,UAAA;AACA;EACAC,IAAA;EACAC,KAAA;IACA;MACA;MACAC,YAAA;IACA;EACA;EACAC,QAAA;IACA,GAAAJ,UAAA;IACAK,KAAA;MACAC,OAAA,CAAAC,GAAA,CAAAC,OAAA;MACA,YAAAA,OAAA;IACA;EACA;EACAC,KAAA;IACAD,OAAA;MACAE,IAAA;MAEAC,QAAA;QACA;QACA,KAAAC,SAAA;UACA;UACA,IAAAC,QAAA,OAAAjB,MAAA,MAAAkB,KAAA,CAAAC,GAAA;YACA;YACAC,SAAA;YACA;YACA;YACAC,UAAA;cACAC,MAAA;cACAC,MAAA;YACA;YACA;YACAC,aAAA;UACA;QACA;MACA;IACA;EACA;EACAC,OAAA;IACA;IACAV,QAAAW,KAAA;MACA;MACA,KAAAnB,YAAA,GAAAmB,KAAA;MACA;MACA,KAAAC,IAAA,CAAAC,KAAA,cAAAF,KAAA;IACA;IACAG,MAAA;MACA,KAAAtB,YAAA;MACA,SAAAA,YAAA,YAAAA,YAAA;MACA,KAAAoB,IAAA,CAAAC,KAAA,mBAAArB,YAAA;IACA;IACAuB,IAAA;MACA,KAAAvB,YAAA;MACA,SAAAA,YAAA,SAAAK,OAAA,CAAAmB,YAAA,CAAAC,MAAA;QACA,KAAA